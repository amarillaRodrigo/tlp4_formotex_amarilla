{
  "info": {
    "name": "FORMOTEX Inventory API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{token}}", "type": "string" }
    ]
  },
  "variable": [
    { "key": "baseUrl", "value": "{{baseUrl}}" }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@formotex.local\",\n  \"password\": \"Admin123!\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let res = {};",
                  "try { res = pm.response.json(); } catch (e) { }",
                  "if (res.token) { pm.environment.set('token', res.token); }",
                  "pm.test('Login OK', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Register User (ADMIN)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"nuevo@formotex.local\",\n  \"password\": \"password123\",\n  \"fullName\": \"Nuevo Usuario\",\n  \"role\": \"USER\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/admin/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "admin", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            }
          }
        },
        {
          "name": "List (ADMIN)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "Equipment",
      "item": [
        {
          "name": "List",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/equipment", "host": ["{{baseUrl}}"], "path": ["api","equipment"] } }
        },
        {
          "name": "Get by ID",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/equipment/{{equipmentId}}", "host": ["{{baseUrl}}"], "path": ["api","equipment","{{equipmentId}}"] } }
        },
        {
          "name": "History",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/equipment/{{equipmentId}}/history", "host": ["{{baseUrl}}"], "path": ["api","equipment","{{equipmentId}}","history"] } }
        },
        {
          "name": "Create (ADMIN)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assetTag\": \"NB-002\",\n  \"serialNumber\": \"SN-XYZ\",\n  \"brand\": \"Lenovo\",\n  \"model\": \"T14s\",\n  \"category\": \"Laptop\",\n  \"status\": \"IN_STOCK\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/equipment", "host": ["{{baseUrl}}"], "path": ["api","equipment"] }
          }
        },
        {
          "name": "Update (ADMIN)",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"REPAIR\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/api/equipment/{{equipmentId}}", "host": ["{{baseUrl}}"], "path": ["api","equipment","{{equipmentId}}"] }
          }
        },
        {
          "name": "Delete (ADMIN)",
          "request": { "method": "DELETE", "url": { "raw": "{{baseUrl}}/api/equipment/{{equipmentId}}", "host": ["{{baseUrl}}"], "path": ["api","equipment","{{equipmentId}}"] } }
        },
        {
          "name": "Assign to User (ADMIN)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/api/equipment/{{equipmentId}}/assign", "host": ["{{baseUrl}}"], "path": ["api","equipment","{{equipmentId}}","assign"] }
          }
        },
        {
          "name": "Transfer to Location (ADMIN)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"locationId\": \"{{locationId}}\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/api/equipment/{{equipmentId}}/transfer", "host": ["{{baseUrl}}"], "path": ["api","equipment","{{equipmentId}}","transfer"] }
          }
        }
      ]
    },
    {
      "name": "Locations",
      "item": [
        {
          "name": "List",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/locations", "host": ["{{baseUrl}}"], "path": ["api","locations"] } }
        },
        {
          "name": "Create (ADMIN)",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"code\": \"OFI-01\",\n  \"name\": \"Oficina Principal\"\n}", "options": { "raw": { "language": "json" } } },
            "url": { "raw": "{{baseUrl}}/api/locations", "host": ["{{baseUrl}}"], "path": ["api","locations"] }
          }
        }
      ]
    }
  ]
}

